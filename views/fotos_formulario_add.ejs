<div class="container">
  <p class="h2 text-center mt-4">Photos</p>
  <div class="row mt-4">
    <div class="col-md-4 mx-auto">
      <div class="myform form">
        <form action="/photos/save" method="post" name="add">
          <div class="form-group mt-2">
            <input
              type="text"
              name="title"
              class="form-control"
              id="title"
              placeholder="Title"
              required="required"
            />
          </div>
          <div class="form-group mt-2">
            <input
              type="text"
              name="description"
              class="form-control"
              id="description"
              placeholder="Description"
              required="required"
            />
          </div>
          <div class="form-group mt-2">
            <input
              type="number"
              min="0"
              max="10"
              step="0.1"
              name="rate"
              id="rate"
              class="form-control"
              placeholder="Rate"
              required="required"
            />
          </div>
          <div class="form-group mt-2 text-center">
            <input
              type="file"
              name="route"
              id="route"
              accept=".png"
              required="required"
            />
          </div>
          <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
